<header eager-load-css="header buttons">
    <nav>
        <div>
            <a href="{{ siteUrl }}" class="button -text -primary mr-0.5">Home</a>
            {% if currentUser['id'] is defined and currentUser.isInGroup('basic') %}
                <a href="{{ siteUrl|trim('/') }}/new-character" class="button -text -primary">Character Creator</a>
            {% endif %}
        </div>
        <div>
            <tips-button web-component role="button" class="button -text -primary">Quick Tips</tips-button>
            <a href="https://www.5esrd.com/" target="_blank" class="button -text -primary ml-0.5">Handbook</a>
            {% if currentUser['id'] is defined %}
                <a no-pjax href="{{ siteUrl|trim('/') }}/actions/users/logout" class="button -text -primary ml-0.5">Log Out</a>
            {% else %}
                <a href="{{ siteUrl|trim('/') }}/login" class="button -text -primary ml-0.5">Log In</a>
            {% endif %}
        </div>
    </nav>
</header>