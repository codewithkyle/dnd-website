                    </form>
                </character-creator>
            {% endif %}
        </section>
    </article>
    <div class="w-full p-1 text-center fixed l-0 b-0" style="pointer-events: none;">
        <div class="mx-0.5 inline-block" id="dice-mounting-point"></div>
        <script src="{{ alias('@rootUrl')|trim('/') }}/preact/dice-roller.js"></script>
    </div>
{% endblock %}