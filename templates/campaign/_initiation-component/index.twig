<initiation-component web-component eager-load-css="initiation-component" class="w-full bg-white p-2 shadow-md">
    <h3 class="font-sm font-grey-700 font-bold mb-1">Initiation Order</h3>
    <entity-wrapper>
        {% for player in players %}
            <entity-component>
                <input type="text" class="js-name" value="{{ player.title }}" readonly data-character-uid="{{ player.uid }}" />
                <input type="number" class="js-initiation" value="0" />
                <button class="js-ping">
                    <svg style="transform: scaleX(-1);" aria-hidden="true" focusable="false" data-prefix="far" data-icon="reply-all" class="svg-inline--fa fa-reply-all fa-w-20" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path fill="currentColor" d="M142.06 273.94l160 159.97c30.02 30.02 81.94 8.98 81.94-33.94v-71.08c118.18 4.94 121.95 30.99 104.44 89.17-13.17 43.75 36.21 78.71 73.1 53.43 50.61-34.7 78.46-79.33 78.46-143.11 0-142.4-127.16-171.02-256-175.61V80.04c0-42.88-51.89-64-81.94-33.94l-160 159.96c-18.75 18.74-18.75 49.14 0 67.88zM176 240L336 80v120c120.616 0 256 6.513 256 128.38 0 55.8-28.79 83.87-57.6 103.62 41.002-136.247-60.829-152-198.4-152v120L176 240zM14.059 206.059l160-159.962c20.389-20.389 50.822-17.22 68.29.31L48 240l194.35 193.603c-17.474 17.531-47.921 20.675-68.291.306l-160-159.967c-18.745-18.746-18.745-49.138 0-67.883z"></path></svg>
                </button>
            </entity-component>
        {% endfor %}
    </entity-wrapper>
    <div class="w-full mb-1" flex="justify-between items-center">
        <button class="button -solid -primary js-add-entity">Add Entity</button>
        <button class="button -solid -primary js-update-initiation-order">Update</button>
    </div>
    <template tag="entity-component">
        <entity-component>
            <input type="text" class="js-name" />
            <input type="number" class="js-initiation" value="0" />
            <button class="js-remove">
                <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="minus-circle" class="svg-inline--fa fa-minus-circle fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M140 284c-6.6 0-12-5.4-12-12v-32c0-6.6 5.4-12 12-12h232c6.6 0 12 5.4 12 12v32c0 6.6-5.4 12-12 12H140zm364-28c0 137-111 248-248 248S8 393 8 256 119 8 256 8s248 111 248 248zm-48 0c0-110.5-89.5-200-200-200S56 145.5 56 256s89.5 200 200 200 200-89.5 200-200z"></path></svg>
            </button>
        </entity-component>
    </template>
</initiation-component>